{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["api/**/*.ts", "lib/**/*.ts", "scripts/**/*.ts", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
